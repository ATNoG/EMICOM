project mihf ;

SOURCES =
	main.cpp
	service_management.cpp
	service_access_controller.cpp
	event_service.cpp generic_server.cpp
	comm_handler.cpp
	transaction.cpp
	net_sap.cpp
	transaction_manager.cpp
	dst_transaction.cpp
	mihfid.cpp
	src_transaction.cpp
	transaction_ack_service.cpp
	transmit.cpp
	log.cpp
	local_transactions.cpp
	command_service.cpp
	information_service.cpp
	utils.cpp
	;

LIBS_SHARED =
	/odtone-config//boost_system
	/odtone-config//boost_thread
	/odtone-config//boost_program_options
	../../lib/odtone/mih//odtone_mih
	../../lib/odtone/sap//odtone_sap
	../../lib/odtone//odtone_base
	;

LIBS_STATIC =
	../../lib/odtone/mih//odtone_mih
	../../lib/odtone/sap//odtone_sap
	../../lib/odtone//odtone_base
	;

exe odtone :
	$(SOURCES)
	$(LIBS_SHARED)
	: <target-os>linux <link>shared
	;

exe odtone :
	$(SOURCES)
	$(LIBS_SHARED)
	: <target-os>windows <link>shared
	;

exe odtone :
	$(SOURCES)
	$(LIBS_STATIC)
	: <target-os>linux <link>static
	;

exe odtone :
	$(SOURCES)
	$(LIBS_STATIC)
	: <link>shared <link>static
	;

